<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>IgResource</servlet-name>
        <servlet-class>trading.IgResource</servlet-class>
        
    </servlet>
    <servlet>
        <servlet-name>TradeService</servlet-name>
        <servlet-class>service.TradeFacadeREST</servlet-class>
        
    </servlet>
    <servlet>
        <servlet-name>AccountService</servlet-name>
        <servlet-class>service.AccountFacadeREST</servlet-class>
        
    </servlet>
    <servlet>
        <servlet-name>ActivityService</servlet-name>
        <servlet-class>service.ActivityFacadeREST</servlet-class>
        
    </servlet>
    <servlet>
        <servlet-name>ClientActionService</servlet-name>
        <servlet-class>service.ClienActionFacadeREST</servlet-class>
        
    </servlet>
    <servlet>
        <servlet-name>BalanceService</servlet-name>
        <servlet-class>service.BalanceFacadeREST</servlet-class>
        
    </servlet>
    <servlet-mapping>
        <servlet-name>IgResource</servlet-name>
        <url-pattern>/ig</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TradeService</servlet-name>
        <url-pattern>/trading.trade</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AccountService</servlet-name>
        <url-pattern>/trading.account</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ActivityService</servlet-name>
        <url-pattern>/trading.activity</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ClientActionService</servlet-name>
        <url-pattern>/trading.clienaction</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BalanceService</servlet-name>
        <url-pattern>/trading.balance</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>
</web-app>
