<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <context-param>
        <param-name>javax.faces.PROJECT_STAGE</param-name>
        <param-value>Development</param-value>
    </context-param>
    <servlet>
        <servlet-name>TradeService</servlet-name>
        <servlet-class>service.TradeFacadeREST</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AccountService</servlet-name>
        <servlet-class>service.AccountFacadeREST</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ActivityService</servlet-name>
        <servlet-class>service.ActivityFacadeREST</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ClientActionService</servlet-name>
        <servlet-class>service.ClienActionFacadeREST</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BalanceService</servlet-name>
        <servlet-class>service.BalanceFacadeREST</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Faces Servlet</servlet-name>
        <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>TradeService</servlet-name>
        <url-pattern>/trading.trade</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AccountService</servlet-name>
        <url-pattern>/trading.account</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ActivityService</servlet-name>
        <url-pattern>/trading.activity</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ClientActionService</servlet-name>
        <url-pattern>/trading.clienaction</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BalanceService</servlet-name>
        <url-pattern>/trading.balance</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Faces Servlet</servlet-name>
        <url-pattern>/faces/*</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>faces/index.xhtml</welcome-file>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>
</web-app>
